              "reserved"
            ]
          }
        },
        "required": [
          "number"
        ],
        "additionalProperties": false
      },
      "createStopPayload": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "isTerminal": {
            "type": "boolean"
          }
        },
        "required": [
          "name"
        ],
        "additionalProperties": false
      },
      "createTicketPayload": {
        "type": "object",
        "properties": {
          "seatId": {
            "type": "number",
            "foreignKey": {
              "table": "seats",
              "column": "id"
            }
          },
          "fromStopId": {
            "type": "number",
            "foreignKey": {
              "table": "stops",
              "column": "id"
            }
          },
          "toStopId": {
            "type": "number",
            "foreignKey": {
              "table": "stops",
              "column": "id"
            }
          },
          "status": {
            "type": "string",
            "enum": [
              "booked",
              "confirmed",
              "cancelled",
              "boarding",
              "in-transit",
              "completed",
              "refunded"
            ]
          },
          "comments": {
            "type": "string"
          }
        },
        "required": [
          "seatId",
          "fromStopId",
          "toStopId"
        ],
        "additionalProperties": false
      }
    }
